#:import utils kivy.utils
#:include homemapview.kv

<HomeScreen>:
    FloatLayout:
        MDToolbar:
            title: "Set Your Location on the Map"
            md_bg_color: app.theme_cls.primary_light
            pos_hint: {"top": .895, "left": 1}
            anchor_title: "center"
            size_hint: 1, .1
        HomeMapView:
            pos_hint: {"top": .795, "left": 1}
            size_hint: 1, .695
            id: mapview
        GridLayout:
            cols:1
            size_hint: 1, .1
            pos_hint: {"top": .1, "right": 1}
            LabelButton:
                text: "OK"
                canvas.before:
                    Color:
                        rgb: app.theme_cls.primary_color if self.state == 'normal' else utils.get_color_from_hex("#6C5B7B")
                    Rectangle:
                        size: self.size
                        pos: self.pos
                #size_hint: .33, .1
                #pos_hint: {"top": .1, "right": .666}
                on_release:
                    app.change_screen("pred_screen", direction='right', mode='push')

